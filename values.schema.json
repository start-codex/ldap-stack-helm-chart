{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "LDAP Stack Helm Chart Values",
    "description": "JSON Schema for validating LDAP Stack Helm chart values",
    "type": "object",
    "properties": {
        "global": {
            "type": "object",
            "description": "Global configuration",
            "properties": {
                "namespace": {
                    "type": "string",
                    "description": "Namespace to deploy (if not using helm -n)"
                },
                "imagePullSecrets": {
                    "type": "array",
                    "description": "Image pull secrets if using private registry",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            }
                        }
                    }
                },
                "storageClass": {
                    "type": "string",
                    "description": "Storage class for PVCs (empty = default)"
                }
            }
        },
        "openldap": {
            "type": "object",
            "description": "OpenLDAP configuration",
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "description": "Enable OpenLDAP",
                    "default": true
                },
                "image": {
                    "type": "object",
                    "properties": {
                        "repository": {
                            "type": "string",
                            "description": "Image repository",
                            "default": "startcodex/openldap"
                        },
                        "tag": {
                            "type": "string",
                            "description": "Image tag",
                            "default": "2.0.0"
                        },
                        "pullPolicy": {
                            "type": "string",
                            "enum": [
                                "Always",
                                "IfNotPresent",
                                "Never"
                            ],
                            "description": "Image pull policy",
                            "default": "IfNotPresent"
                        }
                    }
                },
                "config": {
                    "type": "object",
                    "description": "LDAP Configuration",
                    "required": [
                        "organisation",
                        "domain"
                    ],
                    "properties": {
                        "organisation": {
                            "type": "string",
                            "description": "Organization name",
                            "minLength": 1
                        },
                        "domain": {
                            "type": "string",
                            "description": "LDAP domain (e.g., mycompany.com)",
                            "minLength": 1,
                            "pattern": "^[a-zA-Z0-9][a-zA-Z0-9-]*\\.[a-zA-Z]{2,}$"
                        },
                        "adminPassword": {
                            "type": "string",
                            "description": "Admin password (required if existingSecret is not set)"
                        },
                        "configPassword": {
                            "type": "string",
                            "description": "Config password (optional, defaults to adminPassword)"
                        }
                    }
                },
                "existingSecret": {
                    "type": "string",
                    "description": "Name of existing secret containing OpenLDAP credentials"
                },
                "secretKeys": {
                    "type": "object",
                    "description": "Keys in the existing secret",
                    "properties": {
                        "adminPassword": {
                            "type": "string",
                            "default": "admin-password"
                        },
                        "configPassword": {
                            "type": "string",
                            "default": "config-password"
                        }
                    }
                },
                "tls": {
                    "type": "object",
                    "description": "TLS Configuration",
                    "properties": {
                        "enabled": {
                            "type": "boolean",
                            "default": true
                        },
                        "enforce": {
                            "type": "boolean",
                            "default": false
                        },
                        "existingSecret": {
                            "type": "string",
                            "description": "Use existing secret for TLS certificates"
                        },
                        "certFilename": {
                            "type": "string",
                            "default": "ldap.crt"
                        },
                        "keyFilename": {
                            "type": "string",
                            "default": "ldap.key"
                        },
                        "caFilename": {
                            "type": "string",
                            "default": "ca.crt"
                        }
                    }
                },
                "readonlyUser": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean",
                            "default": false
                        },
                        "username": {
                            "type": "string",
                            "default": "readonly"
                        },
                        "password": {
                            "type": "string"
                        }
                    }
                },
                "rfc2307bisSchema": {
                    "type": "boolean",
                    "description": "Use RFC2307bis schema (for nested groups)",
                    "default": false
                },
                "replication": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean",
                            "default": false
                        },
                        "hosts": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                },
                "service": {
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": [
                                "ClusterIP",
                                "NodePort",
                                "LoadBalancer"
                            ],
                            "default": "ClusterIP"
                        },
                        "ldapPort": {
                            "type": "integer",
                            "default": 389,
                            "minimum": 1,
                            "maximum": 65535
                        },
                        "ldapsPort": {
                            "type": "integer",
                            "default": 636,
                            "minimum": 1,
                            "maximum": 65535
                        },
                        "ldapNodePort": {
                            "type": [
                                "integer",
                                "string"
                            ],
                            "description": "NodePort for LDAP (only when type: NodePort)"
                        },
                        "ldapsNodePort": {
                            "type": [
                                "integer",
                                "string"
                            ],
                            "description": "NodePort for LDAPS (only when type: NodePort)"
                        },
                        "loadBalancerIP": {
                            "type": "string"
                        },
                        "loadBalancerSourceRanges": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "annotations": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                },
                "persistence": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean",
                            "default": true
                        },
                        "size": {
                            "type": "string",
                            "default": "1Gi"
                        },
                        "data": {
                            "type": "object",
                            "properties": {
                                "size": {
                                    "type": "string",
                                    "default": "1Gi"
                                },
                                "accessMode": {
                                    "type": "string",
                                    "enum": [
                                        "ReadWriteOnce",
                                        "ReadWriteMany",
                                        "ReadOnlyMany"
                                    ],
                                    "default": "ReadWriteOnce"
                                }
                            }
                        },
                        "config": {
                            "type": "object",
                            "properties": {
                                "size": {
                                    "type": "string",
                                    "default": "100Mi"
                                },
                                "accessMode": {
                                    "type": "string",
                                    "enum": [
                                        "ReadWriteOnce",
                                        "ReadWriteMany",
                                        "ReadOnlyMany"
                                    ],
                                    "default": "ReadWriteOnce"
                                }
                            }
                        }
                    }
                },
                "resources": {
                    "$ref": "#/definitions/resources"
                },
                "nodeSelector": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                },
                "tolerations": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/toleration"
                    }
                },
                "affinity": {
                    "type": "object"
                },
                "extraEnv": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/envVar"
                    }
                },
                "bootstrap": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean",
                            "default": false
                        },
                        "createDefaultOUs": {
                            "type": "boolean",
                            "default": true
                        },
                        "customLdifConfigMap": {
                            "type": "string"
                        },
                        "ldifContent": {
                            "type": "string"
                        }
                    }
                },
                "livenessProbe": {
                    "$ref": "#/definitions/probe"
                },
                "readinessProbe": {
                    "$ref": "#/definitions/probe"
                }
            }
        },
        "phpldapadmin": {
            "type": "object",
            "description": "phpLDAPadmin configuration",
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "default": true
                },
                "image": {
                    "type": "object",
                    "properties": {
                        "repository": {
                            "type": "string",
                            "default": "osixia/phpldapadmin"
                        },
                        "tag": {
                            "type": "string",
                            "default": "latest"
                        },
                        "pullPolicy": {
                            "type": "string",
                            "enum": [
                                "Always",
                                "IfNotPresent",
                                "Never"
                            ],
                            "default": "IfNotPresent"
                        }
                    }
                },
                "service": {
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": [
                                "ClusterIP",
                                "NodePort",
                                "LoadBalancer"
                            ],
                            "default": "ClusterIP"
                        },
                        "port": {
                            "type": "integer",
                            "default": 80,
                            "minimum": 1,
                            "maximum": 65535
                        },
                        "nodePort": {
                            "type": [
                                "integer",
                                "string"
                            ]
                        },
                        "loadBalancerIP": {
                            "type": "string"
                        },
                        "loadBalancerSourceRanges": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "annotations": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                },
                "ingress": {
                    "$ref": "#/definitions/ingress"
                },
                "resources": {
                    "$ref": "#/definitions/resources"
                },
                "nodeSelector": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                },
                "tolerations": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/toleration"
                    }
                },
                "affinity": {
                    "type": "object"
                }
            }
        },
        "keycloak": {
            "type": "object",
            "description": "Keycloak configuration",
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "default": true
                },
                "image": {
                    "type": "object",
                    "properties": {
                        "repository": {
                            "type": "string",
                            "default": "quay.io/keycloak/keycloak"
                        },
                        "tag": {
                            "type": "string",
                            "default": "latest"
                        },
                        "pullPolicy": {
                            "type": "string",
                            "enum": [
                                "Always",
                                "IfNotPresent",
                                "Never"
                            ],
                            "default": "IfNotPresent"
                        }
                    }
                },
                "admin": {
                    "type": "object",
                    "description": "Keycloak admin credentials (required if existingSecret is not set)",
                    "properties": {
                        "username": {
                            "type": "string",
                            "description": "Admin username"
                        },
                        "password": {
                            "type": "string",
                            "description": "Admin password"
                        }
                    }
                },
                "existingSecret": {
                    "type": "string",
                    "description": "Name of existing secret containing Keycloak admin credentials"
                },
                "secretKeys": {
                    "type": "object",
                    "description": "Keys in the existing secret",
                    "properties": {
                        "adminUsername": {
                            "type": "string",
                            "default": "admin-username"
                        },
                        "adminPassword": {
                            "type": "string",
                            "default": "admin-password"
                        }
                    }
                },
                "devMode": {
                    "type": "boolean",
                    "description": "Run in development mode (start-dev)",
                    "default": true
                },
                "production": {
                    "type": "object",
                    "description": "Production settings (when devMode: false)",
                    "properties": {
                        "hostname": {
                            "type": "string"
                        },
                        "database": {
                            "type": "object",
                            "properties": {
                                "vendor": {
                                    "type": "string",
                                    "enum": [
                                        "postgres",
                                        "mysql",
                                        "mariadb",
                                        "oracle",
                                        "mssql"
                                    ],
                                    "default": "postgres"
                                },
                                "host": {
                                    "type": "string"
                                },
                                "port": {
                                    "type": "integer",
                                    "default": 5432,
                                    "minimum": 1,
                                    "maximum": 65535
                                },
                                "database": {
                                    "type": "string",
                                    "default": "keycloak"
                                },
                                "username": {
                                    "type": "string"
                                },
                                "password": {
                                    "type": "string"
                                },
                                "existingSecret": {
                                    "type": "string",
                                    "description": "Name of existing secret containing database credentials"
                                },
                                "secretKeys": {
                                    "type": "object",
                                    "description": "Keys in the existing secret",
                                    "properties": {
                                        "username": {
                                            "type": "string",
                                            "default": "username"
                                        },
                                        "password": {
                                            "type": "string",
                                            "default": "password"
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "service": {
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": [
                                "ClusterIP",
                                "NodePort",
                                "LoadBalancer"
                            ],
                            "default": "ClusterIP"
                        },
                        "port": {
                            "type": "integer",
                            "default": 8080,
                            "minimum": 1,
                            "maximum": 65535
                        },
                        "nodePort": {
                            "type": [
                                "integer",
                                "string"
                            ]
                        },
                        "loadBalancerIP": {
                            "type": "string"
                        },
                        "loadBalancerSourceRanges": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "annotations": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                },
                "ingress": {
                    "$ref": "#/definitions/ingress"
                },
                "resources": {
                    "$ref": "#/definitions/resources"
                },
                "nodeSelector": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                },
                "tolerations": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/toleration"
                    }
                },
                "affinity": {
                    "type": "object"
                },
                "extraEnv": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/envVar"
                    }
                },
                "realm": {
                    "type": "object",
                    "properties": {
                        "import": {
                            "type": "object",
                            "properties": {
                                "enabled": {
                                    "type": "boolean",
                                    "default": false
                                },
                                "configMapName": {
                                    "type": "string"
                                },
                                "realmJson": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "ldapFederation": {
            "type": "object",
            "description": "LDAP Federation in Keycloak (auto-configuration)",
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "default": false
                },
                "realmName": {
                    "type": "string",
                    "default": "master"
                },
                "displayName": {
                    "type": "string",
                    "default": "ldap"
                },
                "editMode": {
                    "type": "string",
                    "enum": [
                        "READ_ONLY",
                        "WRITABLE",
                        "UNSYNCED"
                    ],
                    "default": "WRITABLE"
                },
                "syncPeriod": {
                    "type": "integer",
                    "default": -1
                },
                "changedSyncPeriod": {
                    "type": "integer",
                    "default": -1
                }
            }
        },
        "networkPolicy": {
            "type": "object",
            "description": "Network Policies (Production Security)",
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "default": false
                },
                "openldap": {
                    "type": "object",
                    "properties": {
                        "allowFromNamespaces": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                },
                "keycloak": {
                    "type": "object",
                    "properties": {
                        "ingressNamespace": {
                            "type": "string",
                            "default": "ingress-nginx"
                        },
                        "allowFromNamespaces": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                },
                "phpldapadmin": {
                    "type": "object",
                    "properties": {
                        "ingressNamespace": {
                            "type": "string",
                            "default": "ingress-nginx"
                        }
                    }
                }
            }
        },
        "podDisruptionBudget": {
            "type": "object",
            "description": "Pod Disruption Budget (High Availability)",
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "default": false
                },
                "minAvailable": {
                    "type": [
                        "integer",
                        "string"
                    ]
                },
                "maxUnavailable": {
                    "type": [
                        "integer",
                        "string"
                    ],
                    "default": 1
                }
            }
        },
        "metrics": {
            "type": "object",
            "description": "Metrics and Monitoring (Prometheus Integration)",
            "properties": {
                "serviceMonitor": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean",
                            "default": false
                        },
                        "namespace": {
                            "type": "string"
                        },
                        "labels": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        },
                        "interval": {
                            "type": "string",
                            "default": "30s"
                        },
                        "scrapeTimeout": {
                            "type": "string",
                            "default": "10s"
                        },
                        "honorLabels": {
                            "type": "boolean",
                            "default": false
                        }
                    }
                },
                "openldapExporter": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean",
                            "default": false
                        },
                        "image": {
                            "type": "object",
                            "properties": {
                                "repository": {
                                    "type": "string",
                                    "default": "tomcz/openldap_exporter"
                                },
                                "tag": {
                                    "type": "string",
                                    "default": "v2.1"
                                }
                            }
                        },
                        "port": {
                            "type": "integer",
                            "default": 9330,
                            "minimum": 1,
                            "maximum": 65535
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "resources": {
            "type": "object",
            "properties": {
                "requests": {
                    "type": "object",
                    "properties": {
                        "memory": {
                            "type": "string"
                        },
                        "cpu": {
                            "type": "string"
                        }
                    }
                },
                "limits": {
                    "type": "object",
                    "properties": {
                        "memory": {
                            "type": "string"
                        },
                        "cpu": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "probe": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "default": true
                },
                "initialDelaySeconds": {
                    "type": "integer",
                    "minimum": 0
                },
                "periodSeconds": {
                    "type": "integer",
                    "minimum": 1
                },
                "timeoutSeconds": {
                    "type": "integer",
                    "minimum": 1
                },
                "failureThreshold": {
                    "type": "integer",
                    "minimum": 1
                }
            }
        },
        "toleration": {
            "type": "object",
            "properties": {
                "key": {
                    "type": "string"
                },
                "operator": {
                    "type": "string",
                    "enum": [
                        "Exists",
                        "Equal"
                    ]
                },
                "value": {
                    "type": "string"
                },
                "effect": {
                    "type": "string",
                    "enum": [
                        "NoSchedule",
                        "PreferNoSchedule",
                        "NoExecute"
                    ]
                },
                "tolerationSeconds": {
                    "type": "integer"
                }
            }
        },
        "envVar": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "value": {
                    "type": "string"
                },
                "valueFrom": {
                    "type": "object",
                    "properties": {
                        "secretKeyRef": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "key": {
                                    "type": "string"
                                }
                            }
                        },
                        "configMapKeyRef": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "key": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "ingress": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "default": false
                },
                "className": {
                    "type": "string"
                },
                "annotations": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                },
                "hosts": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "host": {
                                "type": "string"
                            },
                            "paths": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "path": {
                                            "type": "string"
                                        },
                                        "pathType": {
                                            "type": "string",
                                            "enum": [
                                                "Prefix",
                                                "Exact",
                                                "ImplementationSpecific"
                                            ]
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "tls": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "secretName": {
                                "type": "string"
                            },
                            "hosts": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}